{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">Register</h1>

                    {{ form_errors(registrationForm) }}

                    {{ form_start(registrationForm) }}
                    <div class="mb-3">
                        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Last Name'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.firstname, {'attr': {'class': 'form-control', 'placeholder': 'First Name'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.username, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
                    </div>

                    <div class="mb-3">
                        <legend class="text mb-3">Role</legend>
                        {{ form_row(registrationForm.role, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        <legend class="text mb-3">Mes coordonn√©es</legend>
                        {{ form_row(registrationForm.cin, {'attr': {'class': 'form-control', 'placeholder': 'CIN'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.speciality, {'attr': {'class': 'form-control', 'placeholder': 'Speciality'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.city, {'attr': {'class': 'form-control', 'placeholder': 'City'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.birthday, {'label': 'Birthday', 'attr': {'class': 'form-control', 'placeholder': 'dd/mm/yyyy'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                    </div>
                    <div class="mb-3 form-check">
                        {{ form_row(registrationForm.agreeTerms, {'label': 'I Agree to all the terms of this website', 'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg mb-3">Register</button>
                    <a href="{{ path('app_login') }}" class="btn btn-secondary">Me connecter</a>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

