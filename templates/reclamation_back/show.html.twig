{% extends 'baseBack.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Reclamation Details</h1>

        <div class="card">
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>{{ reclamation.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Nom User</th>
                            <td>{{ reclamation.NomUserReclamation }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Reclamation Text</th>
                            <td>{{ reclamation.textReclamation }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Date</th>
                            <td>{{ reclamation.dateReclamation ? reclamation.dateReclamation|date('Y-m-d') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-center">
                    <a href="{{ path('app_reclamation_back_index') }}" class="btn btn-secondary mt-3">Back to List</a>
                    <a href="{{ path('app_reclamation_back_edit', {'id': reclamation.id}) }}" class="btn btn-primary mt-3">Edit</a>
                </div>
            </div>
        </div>

        {{ include('reclamation_back/_delete_form.html.twig') }}
    </div>
{% endblock %}
